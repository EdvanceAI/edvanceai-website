---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Edvance AI',
  ignoreTitleTemplate: true,
};

const services = [
  {
    title: 'AI-Powered Websites',
    description: 'Custom-built websites with intelligent features that help you connect with your audience and automate core business processes.',
    icon: 'tabler:code',
    highlight: 'Free Hosting',
    gradient: 'from-blue-500 to-purple-500'
  },
  {
    title: 'Intelligent Chatbots',
    description: 'Smart conversational agents that understand context, answer questions, and handle customer support 24/7.',
    icon: 'tabler:robot',
    highlight: 'Custom-Trained',
    gradient: 'from-emerald-500 to-teal-500'
  },
  {
    title: 'SEO Optimization',
    description: 'Data-driven strategies to improve your visibility on search engines and connect with people who need your services.',
    icon: 'tabler:chart-arrows',
    highlight: 'Results-Focused',
    gradient: 'from-orange-500 to-pink-500'
  }
];

const process = [
  {
    step: '01',
    title: 'Discovery',
    timeframe: '1-2 weeks',
    description: 'We work closely with you to understand your mission, goals, and specific needs for your digital presence.',
    icon: 'tabler:bulb'
  },
  {
    step: '02',
    title: 'Development',
    timeframe: '3-4 weeks',
    description: 'Our team builds your custom solution, incorporating AI features while maintaining a focus on usability and impact.',
    icon: 'tabler:code'
  },
  {
    step: '03',
    title: 'Launch',
    timeframe: '1-2 weeks',
    description: 'We deploy your solution, ensure everything runs smoothly, and optimize for maximum reach and engagement.',
    icon: 'tabler:rocket'
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 dark:from-gray-950/95 to-transparent z-10"></div>
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_40%,rgba(64,96,247,0.1),transparent_60%)]"></div>
      <Image
        src="/images/hero-image.jpeg"
        alt="Students working on AI projects"
        width={1920}
        height={1080}
        class="w-full h-full object-cover scale-105 animate-slow-zoom"
      />
    </div>
    <div class="container mx-auto px-6 relative z-20">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm mb-4 mt-4">
          <span class="inline-block w-2 h-2 rounded-full bg-primary animate-pulse"></span>
          <p class="text-sm text-white font-medium">Student-Led Non-profit Organization</p>
        </div>
        <h1 class="text-6xl md:text-7xl font-bold text-white mb-8 leading-tight">
          Building 
          <span class="relative">
            <span class="relative z-10 text-primary">Free</span>
            <span class="absolute bottom-0 left-0 w-full h-3 bg-primary/20 -z-10 skew-x-12"></span>
          </span>
          AI Solutions
        </h1>
        <p class="text-xl text-gray-200 mb-10 leading-relaxed">
          We're passionate high school students building no-cost AI-enabled tools for non-profits 
          and small businesses. Let's amplify your impact together.
        </p>
        <div class="flex flex-wrap gap-4 mb-8">
          <a href="/contact" class="group px-8 py-4 bg-primary hover:bg-secondary text-white rounded-xl font-medium transition-all duration-300 hover:scale-105">
            Get Started
            <Icon name="tabler:arrow-right" class="inline-block ml-2 w-5 h-5 transform group-hover:translate-x-1 transition-transform" />
          </a>
          <a href="#services" class="px-8 py-4 bg-white/10 hover:bg-white/20 text-white rounded-xl font-medium backdrop-blur-sm transition-all duration-300 hover:scale-105">
            Learn More
          </a>
        </div>
      </div>
    </div>
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce">
      <a href="#services" class="text-white/50 hover:text-white transition-colors">
        <Icon name="tabler:chevron-down" class="w-8 h-8" />
      </a>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-32 bg-gray-50 dark:bg-gray-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_70%,rgba(64,96,247,0.1),transparent_60%)]"></div>
    <div class="container mx-auto px-6 relative">
      <div class="max-w-3xl mx-auto text-center mb-20">
        <h2 class="text-5xl font-bold mb-6 dark:text-white">Our Services</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          We combine cutting-edge AI technology with thoughtful design to create solutions 
          that make a real difference for your organization.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {services.map(service => (
          <div class="group bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class={`w-16 h-16 bg-gradient-to-br ${service.gradient} rounded-xl flex items-center justify-center mb-6 transform group-hover:rotate-6 transition-transform`}>
              <Icon name={service.icon} class="w-8 h-8 text-white" />
            </div>
            <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary text-sm rounded-full mb-4 font-medium">
              {service.highlight}
            </span>
            <h3 class="text-2xl font-bold mb-4 dark:text-white">{service.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-32 dark:bg-gray-800 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_30%,rgba(64,96,247,0.1),transparent_60%)]"></div>
    <div class="container mx-auto px-6 relative">
      <div class="max-w-3xl mx-auto text-center mb-20">
        <h2 class="text-5xl font-bold mb-6 dark:text-white">How We Work</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          Our streamlined process ensures we deliver high-quality solutions efficiently 
          while keeping you involved every step of the way.
        </p>
      </div>
      <div class="max-w-3xl mx-auto">
        {process.map((phase, index) => (
          <div class="relative mb-20 last:mb-0">
            <div class="flex items-start gap-8">
              <div class="flex-shrink-0 w-20 h-20 bg-gradient-to-br from-primary to-secondary rounded-2xl flex items-center justify-center text-white text-2xl font-bold transform hover:rotate-6 transition-transform">
                {phase.step}
              </div>
              <div class="flex-grow group">
                <div class="bg-white dark:bg-gray-700 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                  <Icon name={phase.icon} class="w-8 h-8 text-primary mb-4" />
                  <h3 class="text-2xl font-bold mb-2 dark:text-white">{phase.title}</h3>
                  <p class="text-primary font-medium mb-4">{phase.timeframe}</p>
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{phase.description}</p>
                </div>
                {index !== process.length - 1 && (
                  <div class="absolute left-10 top-20 w-0.5 h-24 bg-gradient-to-b from-primary/50 to-transparent"></div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-32 bg-gray-900 dark:bg-gray-950 text-white relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(64,96,247,0.1),transparent_60%)]"></div>
    <div class="container mx-auto px-6 relative">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-5xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl text-gray-300 mb-10 leading-relaxed">
          Let's discuss how we can help digitize and amplify your organization's impact.
        </p>
        <a href="/contact" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary to-secondary hover:opacity-90 text-white rounded-xl font-medium transition-all duration-300 hover:scale-105">
          Contact Us
          <Icon name="tabler:arrow-right" class="ml-2 w-5 h-5 transform group-hover:translate-x-1 transition-transform" />
        </a>
        <div class="grid md:grid-cols-3 gap-8 mt-16">
          {[
            { icon: 'tabler:mail', title: 'Email', content: 'team@edvanceai.org' },
            { icon: 'tabler:headset', title: 'Phone', content: '+1 (240) 425-9549' },
            { icon: 'tabler:brand-instagram', title: 'Social', content: '@edvanceai' }
          ].map(item => (
            <div class="group bg-white/5 hover:bg-white/10 p-8 rounded-2xl backdrop-blur-sm transition-all duration-300 hover:-translate-y-2">
              <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center mb-4 mx-auto transform group-hover:rotate-6 transition-transform">
                <Icon name={item.icon} class="w-6 h-6 text-primary" />
              </div>
              <h3 class="text-lg font-medium mb-2">{item.title}</h3>
              <p class="text-gray-300">{item.content}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slow-zoom {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.1);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .animate-slow-zoom {
    animation: slow-zoom 20s ease-out forwards;
  }

  html {
    scroll-behavior: smooth;
  }

  ::selection {
    background-color: rgba(64, 96, 247, 0.2);
  }
  :root {
    --gradient-stop-1: rgba(64, 96, 247, 0.03);
    --gradient-stop-2: rgba(120, 40, 200, 0.03);
    --gradient-stop-3: rgba(40, 80, 180, 0.03);
  }

  .dark body {
    background: linear-gradient(to bottom right, 
      rgb(17, 24, 39),
      rgb(17, 24, 39)
    );
  }

  .dark section {
    position: relative;
    overflow: hidden;
  }

  /* Hero Section Background */
  .dark section:nth-of-type(1)::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 0% 0%, var(--gradient-stop-1), transparent 40%),
      radial-gradient(circle at 100% 0%, var(--gradient-stop-2), transparent 40%),
      radial-gradient(circle at 100% 100%, var(--gradient-stop-3), transparent 40%),
      radial-gradient(circle at 0% 100%, var(--gradient-stop-1), transparent 40%);
    opacity: 0.8;
    pointer-events: none;
  }

  /* Services Section Background */
  .dark section:nth-of-type(2) {
    background: linear-gradient(
      45deg,
      rgb(17, 24, 39),
      rgb(17, 24, 39)
    );
  }

  .dark section:nth-of-type(2)::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 50%, var(--gradient-stop-2), transparent 40%),
      radial-gradient(circle at 80% 50%, var(--gradient-stop-3), transparent 40%);
    opacity: 0.6;
    pointer-events: none;
  }

  /* Process Section Background */
  .dark section:nth-of-type(3) {
    background: linear-gradient(
      -45deg,
      rgb(17, 24, 39),
      rgb(17, 24, 39)
    );
  }

  .dark section:nth-of-type(3)::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 50% 0%, var(--gradient-stop-1), transparent 50%),
      radial-gradient(circle at 80% 80%, var(--gradient-stop-2), transparent 40%);
    opacity: 0.7;
    pointer-events: none;
  }

  /* Contact Section Background */
  .dark section:nth-of-type(4) {
    background: linear-gradient(
      180deg,
      rgb(17, 24, 39),
      rgb(17, 24, 39)
    );
  }

  .dark section:nth-of-type(4)::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 20%, var(--gradient-stop-3), transparent 40%),
      radial-gradient(circle at 80% 20%, var(--gradient-stop-1), transparent 30%),
      radial-gradient(circle at 50% 80%, var(--gradient-stop-2), transparent 50%);
    opacity: 0.6;
    pointer-events: none;
  }

  /* Gradient Mesh Animation */
  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .dark .gradient-mesh {
    background: linear-gradient(
      45deg,
      var(--gradient-stop-1),
      var(--gradient-stop-2),
      var(--gradient-stop-3),
      var(--gradient-stop-1)
    );
    background-size: 400% 400%;
    animation: gradientMove 15s ease infinite;
  }

  /* Enhanced Card Backgrounds */
  .dark .service-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .dark .service-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  /* Glowing Border Effect */
  .dark .glow-border {
    position: relative;
  }

  .dark .glow-border::after {
    content: '';
    position: absolute;
    inset: -1px;
    background: linear-gradient(
      45deg,
      rgba(64, 96, 247, 0.2),
      rgba(120, 40, 200, 0.2),
      rgba(40, 80, 180, 0.2)
    );
    border-radius: inherit;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .dark .glow-border:hover::after {
    opacity: 1;
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fadeInUp');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '50px'
  });

  document.querySelectorAll('section > div').forEach((el) => observer.observe(el));
</script>
