---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Edvance AI | Student-Led AI Solutions',
  ignoreTitleTemplate: true,
};

const services = [
  {
    title: 'AI-Powered Websites',
    description: 'Custom-built websites with intelligent features that help you connect with your audience and automate core business processes.',
    icon: 'tabler:code',
    highlight: 'Free Hosting'
  },
  {
    title: 'Intelligent Chatbots',
    description: 'Smart conversational agents that understand context, answer questions, and handle customer support 24/7.',
    icon: 'tabler:robot',
    highlight: 'Custom-Trained'
  },
  {
    title: 'SEO Optimization',
    description: 'Data-driven strategies to improve your visibility on search engines and connect with people who need your services.',
    icon: 'tabler:chart-arrows',
    highlight: 'Results-Focused'
  }
];

const process = [
  {
    step: '01',
    title: 'Discovery',
    timeframe: '1-2 weeks',
    description: 'We work closely with you to understand your mission, goals, and specific needs for your digital presence.'
  },
  {
    step: '02',
    title: 'Development',
    timeframe: '3-4 weeks',
    description: 'Our team builds your custom solution, incorporating AI features while maintaining a focus on usability and impact.'
  },
  {
    step: '03',
    title: 'Launch',
    timeframe: '1-2 weeks',
    description: 'We deploy your solution, ensure everything runs smoothly, and optimize for maximum reach and engagement.'
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center">
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 dark:from-gray-950 to-transparent z-10"></div>
    <div class="absolute inset-0">
      <Image
        src="/images/hero-image.jpeg"
        alt="Students working on AI projects"
        width={1920}
        height={1080}
        class="w-full h-full object-cover"
      />
    </div>
    <div class="container mx-auto px-6 relative z-20">
      <div class="max-w-3xl">
        <p class="text-primary font-medium mt-4 mb-4">Student-Led Non-profit Organization</p>
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          Empowering Organizations with <span class="text-primary">Free</span> AI Solutions
        </h1>
        <p class="text-xl text-gray-200 mb-8">
          We're passionate high school students building no-cost AI-enabled tools for non-profits 
          and small businesses. Let's amplify your impact together.
        </p>
        <div class="flex gap-4 mb-8">
          <a href="/contact" class="px-8 py-4 bg-primary hover:bg-secondary text-white rounded-lg font-medium transition-colors">
            Get Started
          </a>
          <a href="#services" class="px-8 py-4 bg-white/10 hover:bg-white/20 text-white rounded-lg font-medium backdrop-blur-sm transition-colors">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold mb-6 dark:text-white">Our Services</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          We combine cutting-edge AI technology with thoughtful design to create solutions 
          that make a real difference for your organization.
        </p>
      </div>
     <div class="grid md:grid-cols-3 gap-8">
        {services.map(service => (
          <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-6">
              <Icon name={service.icon} class="w-6 h-6 text-primary" />
            </div>
            <span class="inline-block px-3 py-1 bg-primary/10 text-primary text-sm rounded-full mb-4">
              {service.highlight}
            </span>
            <h3 class="text-xl font-bold mb-4 dark:text-white">{service.title}</h3>
            <p class="text-gray-600 dark:text-gray-300">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-24 dark:bg-gray-800">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold mb-6 dark:text-white">How We Work</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Our streamlined process ensures we deliver high-quality solutions efficiently 
          while keeping you involved every step of the way.
        </p>
      </div>
      <div class="max-w-2xl mx-auto">
        {process.map((phase, index) => (
          <div class="relative mb-16 last:mb-0">
            <div class="flex items-start gap-8">
              <div class="flex-shrink-0 w-16 h-16 bg-primary rounded-full flex items-center justify-center text-white text-xl font-bold">
                {phase.step}
              </div>
              <div class="flex-grow">
                <div class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-sm">
                  <h3 class="text-xl font-bold mb-2 dark:text-white">{phase.title}</h3>
                  <p class="text-primary font-medium mb-4">{phase.timeframe}</p>
                  <p class="text-gray-600 dark:text-gray-300">{phase.description}</p>
                </div>
                {index !== process.length - 1 && (
                  <div class="absolute left-8 top-16 w-0.5 h-16 bg-primary/20"></div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-24 bg-gray-900 dark:bg-gray-950 text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl text-gray-300 mb-8">
          Let's discuss how we can help digitize and amplify your organization's impact.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 bg-primary hover:bg-secondary text-white rounded-lg font-medium transition-colors">
          Contact Us
        </a>
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="bg-white/5 hover:bg-white/10 p-6 rounded-lg backdrop-blur-sm transition-colors">
            <i class="tabler:mail w-8 h-8 text-primary mb-4"></i>
            <h3 class="text-lg font-medium mb-2">Email</h3>
            <p class="text-gray-300">team@edvanceai.org</p>
          </div>
          <div class="bg-white/5 hover:bg-white/10 p-6 rounded-lg backdrop-blur-sm transition-colors">
            <i class="tabler:headset w-8 h-8 text-primary mb-4"></i>
            <h3 class="text-lg font-medium mb-2">Phone Number</h3>
            <p class="text-gray-300">+1 (240) 425-9549</p>
          </div>
          <div class="bg-white/5 hover:bg-white/10 p-6 rounded-lg backdrop-blur-sm transition-colors">
            <i class="tabler:brand-instagram w-8 h-8 text-primary mb-4"></i>
            <h3 class="text-lg font-medium mb-2">Social Media</h3>
            <p class="text-gray-300">@edvanceai</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fadeInUp');
      }
    });
  }, {
    threshold: 0.1
  });

  document.querySelectorAll('section > div').forEach((el) => observer.observe(el));
</script>
