---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Our Team'
};

const founders = [
  {
    name: "Parim Shah",
    title: "CEO & Co-Founder",
    image: '/images/parim.jpeg',
    linkedIn: "#",
  },
  {
    name: "Rishi Narang",
    title: "CTO & Co-Founder", 
    image: '/images/Rishi.png',
    linkedIn: "#",
  },
  {
    name: "Quinley Borden",
    title: "COO & Co-Founder",
    image: '/images/quinley.png',
    linkedIn: "#",
  }
];
---

<Layout metadata={metadata}>
  <main class="min-h-screen bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800">
    <!-- Hero Section -->
    <section class="pt-24 pb-12 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <div class="inline-block mb-4 px-4 py-1 bg-blue-50 dark:bg-blue-900/30 rounded-full">
          <span class="text-white-600 dark:text-white-400 text-sm font-medium">Our Team</span>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-primary dark:text-primary">
          Meet the Founders
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Student innovators passionate about democratizing AI technology and making a positive impact in our community.
        </p>
      </div>
    </section>

    <!-- Team Grid -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {founders.map((founder) => (
            <div class="group relative">
              <div class="relative overflow-hidden rounded-2xl bg-white dark:bg-gray-800 shadow-lg transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
                <div class="aspect-[4/5] overflow-hidden">
                  {founder.image ? (
                    <img 
                      src={founder.image} 
                      alt={founder.name} 
                      class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                      width={400}
                      height={500}
                    />
                  ) : (
                    <div class="w-full h-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                      <svg class="w-1/3 h-1/3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                </div>
                <div class="absolute bottom-0 left-0 right-0 p-6 translate-y-4 group-hover:translate-y-0 transition duration-300">
                  <h3 class="text-2xl font-bold text-white mb-1">
                    {founder.name}
                  </h3>
                  <p class="text-blue-300 font-medium mb-4">
                    {founder.title}
                  </p>
                  <a 
                    href={founder.linkedIn}
                    class="inline-flex items-center gap-2 text-sm text-white/90 hover:text-white"
                  >
                    <span>Connect on LinkedIn</span>
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  /* Optimize animations for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    section {
      animation: none;
    }
    
    :global(*) {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
    }
  }
</style>
